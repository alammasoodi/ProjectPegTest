<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Put the peg in the hole using your left hand"
            android:textColor="#000"
            android:textSize="30dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick up the peg using two fingers"
            android:gravity="center"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="180dp"
        android:paddingLeft="20dp"
        android:id="@+id/draggable_layout2">

        <Button
            android:id="@+id/drag_button"
            android:layout_width="83dp"
            android:layout_height="80dp"
            android:background="@drawable/round_button" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="200dp"
        >

        <ImageView
            android:id="@+id/guide1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/right_arrow" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/right_arrow"
        android:id="@+id/guide2"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/right_arrow"
       android:id="@+id/guide3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="270dp"
        android:id="@+id/draggable_layout">

        <Button
            android:id="@+id/hole_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/round_button_hole" />
    </LinearLayout>

</RelativeLayout>