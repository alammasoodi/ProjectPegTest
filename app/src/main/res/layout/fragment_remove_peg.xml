<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Put the peg behind the line using your right hand"
            android:textColor="#000"
            android:textSize="30dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick up the peg using two fingers"
            android:gravity="center"
            android:textSize="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="180dp"
        android:paddingLeft="20dp"
        android:id="@+id/draggable_layout2">

        <Button
            android:id="@+id/drag_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/round_button" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="210dp"

        >

        <ImageView
            android:id="@+id/guide1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/right_arrow" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/right_arrow"
            android:id="@+id/guide2"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/right_arrow"
            android:id="@+id/guide3"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="400dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="280dp"
        android:id="@+id/draggable_layout">


        <View android:id="@+id/vertical_line"
            android:layout_width="1dp"
            android:layout_height="270dp"
            android:background="@drawable/dotted_line_view"
            />
        </LinearLayout>

</RelativeLayout>